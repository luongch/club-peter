<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
</head>
<body>
  <h1><%= title %></h1>
  <form action="" method="POST">
    <label for="username">Username</label>
    <input name="username" placeholder="username" type="text" value="chris@clubpeter.com" />
    <label for="password">Password</label>
    <input name="password" type="password" value="a" />
    <button type="submit">Log In</button>
  </form>
  <% if(typeof errors !== 'undefined') { %>
    <% errors.forEach(error => { %>
        <h2><%= error.msg %></h2>
    <% }) %>
  <% } %>
</body>
</html>